<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <div class="thumbnail">
                <img class="img-responsive" src="<%= wavetype.image %>">
                <div class="caption-full">
                    <h4><a href=""><%= wavetype.name %></a></h4>
                    <p><%= wavetype.description %></p>
                    <p>
                        <em>Submitted by <%= wavetype.author.username %></em>
                    </p>
                    <a class="btn btn-success" href="/scorebuilder/<%= wavetype._id %>">Start Scoring Rides!</a>
                    <% if (currentUser && wavetype.author.id.equals(currentUser._id)) { %>
                        <a class="btn btn-warning" href="/wavetypes/<%= wavetype._id %>/edit">Edit</a>
                        <form class="delete-form" action="/wavetypes/<%= wavetype._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <% } %>
                </div>
            </div>
            <div class="well">
                <div class="form-group">
                    <label>Great tube ride<input class="form-control" type="number" name="supertube" value="<%= wavetype.supertube %>" readonly></label>
                    <label>Medium tube ride<input class="form-control" type="number" name="mediumtube" value="<%= wavetype.mediumtube %>" readonly></label>
                    <label>Small tube ride<input class="form-control" type="number" name="smalltube" value="<%= wavetype.smalltube %>" readonly></label>
                </div>
                <div class="form-group">
                    <label>Amazing turn<input class="form-control" type="number" name="supertube" value="<%= wavetype.superturn %>" readonly></label>
                    <label>Medium turn<input class="form-control" type="number" name="mediumtube" value="<%= wavetype.mediumturn %>" readonly></label>
                    <label>Small turn / setup manouevre<input class="form-control" type="number" name="smalltube" value="<%= wavetype.smallturn %>" readonly></label>
                </div>
                <a href="/wavetypes">Go Back</a>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer %>