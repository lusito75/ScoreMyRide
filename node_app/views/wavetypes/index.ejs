<% include ../partials/header %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
                <h1>Welcome!</h1>
                <p>Select a particular wave type for posting scores ..</p>
                <p>
                    <a class="btn btn-primary btn-lg" href="/wavetypes/new">or Add a new wave type</a>            
                </p>
        </div>
        
    </header>

    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% wavetypes.forEach(function(wavetype){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= wavetype.image %>">
                    <div class="caption">
                        <h4><%= wavetype.name %></h4>
                    </div>
                    <p>
                        <a href="/wavetypes/<%= wavetype._id %>" class="btn btn-primary">Start Scoring</a>
                    </p>
                </div>
            </div>
            <li></li>
        <% }); %>    
    </div>
</div>
<% include ../partials/footer %>
